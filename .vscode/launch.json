    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Tests",
            "request": "launch",
            "type": "node",
            "program": "${workspaceRoot}\\node_modules\\mocha\\bin\\_mocha",
            "cwd": "${workspaceRoot}",
            "args": [
                "${workspaceRoot}/out/test/**/*.test.js"
            ],
            "stopOnEntry": false,
            "sourceMaps": true,
            "outFiles": [ "${workspaceRoot}/out/test/**/*.js" ]
        },
    ]
}